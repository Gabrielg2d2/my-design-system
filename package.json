{
	"name": "my-desing-system",
	"version": "0.1.0",
	"type": "module",
	"main": "dist/index.cjs.js",
  	"module": "dist/index.es.js",
  	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"README.md",
		"package.json"
	],
	"scripts": {
		"build": "tsc -b && vite build",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"clean:dts": "find src -name '*.d.ts' -type f -delete",
		"prepublishOnly": "rm -rf dist && npm run build && npm run clean:dts",
		"format": "npx @biomejs/biome format --write",
		"lint": "npx @biomejs/biome lint --write",
		"check": "npx @biomejs/biome check --write",
		"validate": "npm run format && npm run lint && npm run check",
		"ci": "npx @biomejs/biome ci",
		"test": "vitest",
		"coverage": "vitest run --coverage"
	},
	"peerDependencies": {
		"@radix-ui/themes": "3.2.1",
		"react": "19.0.0",
		"react-dom": "19.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@chromatic-com/storybook": "3.2.5",
		"@eslint/js": "9.21.0",
		"@storybook/addon-essentials": "8.6.3",
		"@storybook/addon-onboarding": "8.6.3",
		"@storybook/blocks": "8.6.3",
		"@storybook/experimental-addon-test": "8.6.3",
		"@storybook/manager-api": "8.6.3",
		"@storybook/react": "8.6.3",
		"@storybook/react-vite": "8.6.3",
		"@storybook/test": "8.6.3",
		"@storybook/theming": "8.6.3",
		"@types/node": "^22.13.9",
		"@types/path-browserify": "^1.0.3",
		"@types/react": "19.0.10",
		"@types/react-dom": "19.0.4",
		"@vitejs/plugin-react": "4.3.4",
		"@vitest/browser": "3.0.7",
		"@vitest/coverage-v8": "3.0.7",
		"ajv": "8.17.1",
		"globals": "16.0.0",
		"path-browserify": "^1.0.1",
		"playwright": "1.50.1",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"storybook": "8.6.3",
		"typescript": "5.8.2",
		"vite": "6.2.0",
		"vite-plugin-dts": "^4.5.3",
		"vitest": "3.0.7"
	},
	"dependencies": {
		"@radix-ui/themes": "3.2.1"
	}
}
