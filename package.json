{
  "name": "my-desing-system",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b && vite build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "clean:dts": "find src -name '*.d.ts' -type f -delete",
    "prepublishOnly": "rm -rf dist && npm run build && npm run clean:dts",
    "format": "npx @biomejs/biome format --write ./src",
    "lint": "npx @biomejs/biome lint --write ./src",
    "check": "npx @biomejs/biome check --write ./src",
    "validate": "npm run format && npm run lint && npm run check",
    "ci": "npx @biomejs/biome ci ./src"
  },
  "peerDependencies": {
    "@tailwindcss/postcss": "4.0.9",
    "@tailwindcss/vite": "4.0.9",
    "postcss": "8.5.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwindcss": "4.0.9"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@chromatic-com/storybook": "3.2.5",
    "@eslint/js": "9.21.0",
